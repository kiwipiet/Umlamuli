[*.{cs,vb}]
dotnet_style_explicit_tuple_names = true:suggestion
dotnet_style_null_checking = true:suggestion

# C# code style
csharp_style_expression_bodies = when_possible:suggestion
csharp_style_prefer_primary_constructors = true:suggestion
csharp_style_prefer_static_local_function = true:suggestion

# Naming
dotnet_naming_rule.interface_should_start_with_I.severity = suggestion
dotnet_naming_rule.interface_should_start_with_I.symbols = interface_symbols
dotnet_naming_rule.interface_should_start_with_I.style = prefix_I
dotnet_naming_symbols.interface_symbols.applicable_kinds = interface
dotnet_naming_style.prefix_I.required_prefix = I

# Docs required on public API
dotnet_diagnostic.CS1591.severity = warning

# Treat common issues strictly
dotnet_diagnostic.CA1062.severity = warning        # Validate arguments of public methods
dotnet_diagnostic.CA2000.severity = warning        # Dispose objects correctly
dotnet_diagnostic.CA1802.severity = warning        # Use const for literals
dotnet_diagnostic.CA1822.severity = suggestion     # Mark members as static
dotnet_diagnostic.IDE0051.severity = suggestion    # Remove unused private members

# Enable nullable reference types and warn-as-error at project level
[*.csproj]
dotnet_analyzer_diagnostic.category-Style.severity = suggestion
dotnet_analyzer_diagnostic.category-Documentation.severity = warning
